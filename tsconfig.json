{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "dist",

    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts"]
}
